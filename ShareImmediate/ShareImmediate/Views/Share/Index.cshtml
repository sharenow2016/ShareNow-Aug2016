@model ShareImmediate.ViewModels.ShareVM
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@Html.LabelFor(model => model.AvailableUsers, htmlAttributes: new { @class = "control-label col-md-2" })

<div class="col-md-3">
    @Html.DropDownList("UserName", null, htmlAttributes: new { @class = "form-control" })
    @Html.ValidationMessageFor(model => model.AvailableUsers, "", new { @class = "text-danger" })
</div>
</div>

<div class="form-group">
    @Html.LabelFor(m => m.Category, new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.TextBoxFor(m => m.Category, new { @class = "form-control" })
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(m => m.Amount, new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.TextBoxFor(m => m.Amount, new { @class = "form-control" })
    </div>
</div>

<div class="form-group">
    <div class="btn btn-primary">
        <input type="submit" value="ShareNow" class="btn btn-default" onclick="location.href='@Url.Action("IndexPost", "Pay")'" />
    </div>

</div>


