@model ShareImmediate.ViewModels.GroupVM
@{
    ViewBag.Title = "Index";
    ViewBag.Message = Model.Message;
}

<h2>Index</h2>

<<div class="form-group">

     <div class="form-group">
         @Html.LabelFor(m => m.GroupName, new { @class = "col-md-2 control-label" })
         <div class="col-md-10">
             @Html.TextBoxFor(m => m.GroupName, new { @class = "form-control" })
         </div>
     </div>

    @Html.LabelFor(model => model.GroupMembers, htmlAttributes: new { @class = "control-label col-md-2" })

    <div class="col-md-3">
        @Html.DropDownList("GroupMembersList", null, htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.GroupMembers, "", new { @class = "text-danger" })
    </div>
</div>


<div class="form-group">
    <div class="btn btn-primary">
        <input type="submit" value="PayNow" class="btn btn-default" onclick="location.href='@Url.Action("IndexPost", "Pay")'" />
    </div>

</div>

<h5>@ViewBag.Message</h5>


